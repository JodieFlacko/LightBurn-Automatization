{
  "name": "amazon-orders-feed-importer",
  "version": "1.0.0",
  "description": "Victoria Laser Automation App",
  "author": "Victoria Laser",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm --filter web build && pnpm --filter server build",
    "seed": "pnpm --filter server seed",
    "db:migrate": "pnpm --filter server db:migrate",
    "package:windows": "bash scripts/package-windows.sh",
    "electron:dev": "pnpm build && electron electron/main.js",
    "electron:build": "pnpm build && pnpm exec electron-builder --win --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264",
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/static": "^7.0.4",
    "better-sqlite3": "^12.6.2",
    "cheerio": "^1.2.0",
    "conf": "^15.1.0",
    "csv-parse": "^5.5.6",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "fast-xml-parser": "^5.3.3",
    "fastify": "^4.28.1",
    "fs-extra": "^11.3.3",
    "is-wsl": "^3.1.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "electron": "^39.5.2",
    "electron-builder": "^24.13.3",
    "prebuild-install": "^7.1.3"
  },
  "build": {
    "appId": "com.victoria.laser-app",
    "productName": "Victoria Laser App",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "server/dist/**/*",
      "package.json",
      "!node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules",
        "to": "node_modules",
        "filter": ["**/*"]
      },
      {
        "from": "server/templates",
        "to": "templates",
        "filter": ["**/*"]
      },
      {
        "from": "server/assets",
        "to": "assets",
        "filter": ["**/*"]
      },
      {
        "from": "server/drizzle",
        "to": "drizzle",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Victoria Laser"
    },
    "asar": true,
    "npmRebuild": true,
    "buildDependenciesFromSource": false
  }
}
